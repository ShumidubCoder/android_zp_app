<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:id="@+id/cv">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="vertical"
                android:id="@+id/ll_on_list_view"
                android:elevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_zp">

                    <TextView
                        android:id="@+id/id_from_database"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        tools:ignore="Suspicious0dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:id="@+id/x_mounth"
                        android:text="09_ZP"
                        android:layout_weight="2"
                        android:textSize="14dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_gravity="center"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_of_paying"
                        android:text="25.09"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/value_of_paying"
                        android:text="20000"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sts_date_of_paying"
                        android:text="25.09"
                        android:layout_weight="2"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:textColor="@color/colorSTS"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sts_value_of_paying"
                        android:text="5000"
                        android:layout_weight="2"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:textColor="@color/colorSTS"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:singleLine="true"/>




                </LinearLayout>



            </LinearLayout>



    </android.support.v7.widget.CardView>

